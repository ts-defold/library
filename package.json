{
  "name": "@ts-defold/library",
  "version": "1.0.0",
  "description": "Type library for Defold",
  "main": "lib/index.js",
  "bin": "bin/library.js",
  "files": [
    "lib/**/*.{js,d.ts}",
    "bin/**/*.js"
  ],
  "scripts": {
    "resolve": "npm run build && ./bin/library.js resolve --src ./tests/resolve --out ./tests/resolve/@types",
    "publish": "npm run build && ./bin/library.js publish --src ./packages",
    "build": "npm run clean && tsc",
    "clean": "tsc --build --clean",
    "dev": "npm run build && DEV=true node ./bin/library.js"
  },
  "author": "Justin Walsh",
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.5.9",
    "await-to-js": "^3.0.0",
    "node-fetch": "^2.6.1",
    "semver": "^7.3.5",
    "typescript": "^4.4.4",
    "xml2js": "^0.4.23",
    "yargs": "^17.2.1"
  },
  "devDependencies": {
    "@ts-defold/types": "^1.2.4",
    "@types/adm-zip": "^0.4.34",
    "@types/node": "^14.17.29",
    "@types/node-fetch": "^2.5.12",
    "@types/semver": "^7.3.9",
    "@types/xml2js": "^0.4.9",
    "@types/yargs": "^17.0.4"
  }
}
